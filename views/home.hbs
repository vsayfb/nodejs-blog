<div class="container">
  <div class="d-flex flex-wrap mt-5">

    {{#each articles}}
      <a href="article/{{_id}}" class="article-card-link">
        <div class="article-card">

          {{#if image}}
            <img src="{{image}}" class="card-img-top" alt="Not Found!" />
          {{/if}}

          <div class="article-card-body">

            <div class="article-card-body-author">
              <div>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="20"
                  height="20"
                  fill="currentColor"
                  class="bi bi-person-circle"
                  viewBox="0 0 16 16"
                >
                  <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"></path>
                  <path
                    fill-rule="evenodd"
                    d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"
                  ></path>
                </svg>
              </div>
              <div>{{author.displayName}}</div>
            </div>

            <h3>{{displayTitle}}</h3>

            {{#if tags.length}}
              <div class="article-card-body-tags">
                {{#each tags}}
                  <a href="/tag/{{_id}}" class="tag-box">#{{text}}</a>
                {{/each}}
              </div>
            {{/if}}

            <div class="article-card-body-views">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="18"
                height="18"
                fill="currentColor"
                class="bi bi-eye-fill"
                viewBox="0 0 16 16"
              >
                <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z"></path>
                <path
                  d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8zm8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7z"
                ></path>
              </svg>
              {{views}}
            </div>

            <div class="article-card-body-date">

              <div>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  fill="currentColor"
                  class="bi bi-calendar2-event"
                  viewBox="0 0 16 16"
                >
                  <path
                    d="M11 7.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1z"
                  ></path>
                  <path
                    d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM2 2a1 1 0 0 0-1 1v11a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V3a1 1 0 0 0-1-1H2z"
                  ></path>
                  <path
                    d="M2.5 4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5H3a.5.5 0 0 1-.5-.5V4z"
                  ></path>
                </svg>
              </div>
              <span>
                {{toDate createdAt}}
              </span>
            </div>

          </div>
        </div>
      </a>
    {{/each}}
  </div>
</div>