<div class="container">
  <div class="tag-title">
    <h4 class="tag-title">{{tag.text}}</h4>
  </div>

  <div class="wrapper">
    {{#each articles}}
      <div class="article-card-2">
        <a href="/article/{{_id}}">

          <img src="/{{images.article}}" alt="{{displayTitle}}" />

          <div class="author">
            <div>
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                fill="currentColor"
                class="bi bi-person-circle"
                viewBox="0 0 16 16"
              >
                <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"></path>
                <path
                  fill-rule="evenodd"
                  d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"
                ></path>
              </svg>
            </div>
            <div>{{author.displayName}}</div>
          </div>

          <h3>
            {{displayTitle}}
          </h3>
        </a>
      </div>
    {{/each}}
  </div>

</div>