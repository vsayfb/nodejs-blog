      {{#if (isNotDefined token)}}
        <a class="yellow-button events-sign-in" href="/signUp">Create Account</a>
        <a class="yellow-button events-log-in" href="/login">Log in</a>
      {{/if}}

      {{#if (isDefined token)}}
        <a
          class="yellow-button"
          href="/dashboard/{{user._id}}"
        >{{user.displayName}}</a>

        <a class="black-button events-logout" href="/logout">Logout</a>
      {{/if}}
